<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.uce.portal.sync.dao.IUctNoticeFilesDao">

	<select id="findNoticeFilesById" parameterType="java.lang.Long" resultType="cn.uce.portal.sync.entity.UctNoticeFiles">
		select * from omg_portal_uct_notice_files where id = #{id}
	</select>
	
	<update id="updateNoticeFilesById" parameterType="cn.uce.portal.sync.entity.UctNoticeFiles">
		UPDATE omg_portal_uct_notice_files
		<set>
			<if test="noticeId != null and noticeId !=''">
				notice_id = #{noticeId},
			</if>
			<if test="fileId != null and fileId !=''">
				file_id = #{fileId},
			</if>
			<if test="filePath != null and filePath !=''">
				file_path = #{filePath},
			</if>
			<if test="fileName != null and fileName !=''">
				file_name = #{fileName},
			</if>
			<if test="deleteFlag != null and deleteFlag !=''">
				delete_flag = #{deleteFlag},
			</if>
			<if test="remark != null and remark !=''">
				remark = #{remark},
			</if>
			<if test="fileType != null and fileType !=''">
				file_type = #{fileType},
			</if>
			<if test="smallPath != null and smallPath !=''">
				small_path = #{smallPath},
			</if>
		</set>
		WHERE id = #{id}
	</update>
	
	<delete id="deleteNoticeFilesById" parameterType="java.lang.Long">
		DELETE FROM omg_portal_uct_notice_files WHERE id = #{id}
	</delete>
	
	<delete id="deleteNoticeFilesByNoticeId" parameterType="java.lang.Long">
		DELETE FROM omg_portal_uct_notice_files WHERE notice_id = #{noticeId}
	</delete>
	
</mapper>