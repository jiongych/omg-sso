<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.uce.portal.sync.dao.IUctNoticeTypeDao">

	<select id="findNoticeTypeById" parameterType="java.lang.Long" resultType="cn.uce.portal.sync.entity.UctNoticeType">
		select * from omg_portal_uct_notice_type where type_id = #{id}
	</select>
	
	<update id="updateNoticeTypeById" parameterType="cn.uce.portal.sync.entity.UctNoticeType">
		UPDATE omg_portal_uct_notice_type
		<set>
			<if test="typeName != null and typeName !=''">
				type_name = #{typeName},
			</if>
			<if test="parentId != null and parentId !=''">
				parent_id = #{parentId},
			</if>
			<if test="updateEmp != null and updateEmp !=''">
				update_emp = #{updateEmp},
			</if>
			<if test="updateOrg != null and updateOrg !=''">
				update_org = #{updateOrg},
			</if>
			<if test="enabled != null and enabled !=''">
				enabled = #{enabled},
			</if>
			<if test="searchType != null and searchType !=''">
				search_type = #{searchType},
			</if>
			<if test="orgCode != null and orgCode !=''">
				org_code = #{orgCode},
			</if>
			<if test="orderId != null and orderId !=''">
				order_id = #{orderId},
			</if>
			UPDATE_TIME=now(),
		</set>
		WHERE type_id = #{typeId}
	</update>
	
	<delete id="deleteNoticeTypeById" parameterType="java.lang.Long">
		DELETE FROM omg_portal_uct_notice_type WHERE type_id = #{id}
	</delete>
	
</mapper>