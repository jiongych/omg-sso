<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.uce.omg.portal.dao.IUserOrgDao">
	
	<delete id="deleteUserOrgByEmpCode" parameterType="java.lang.String">
		DELETE FROM OMG_PORTAL_USER_ORG WHERE OMG_PORTAL_USER_ORG.EMP_CODE = #{_parameter}
	</delete>
	
	<!-- 查询用户组织 -->
	<select id="findDataAuthByEmpCode" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT ORG_CODE FROM OMG_PORTAL_USER_ORG WHERE EMP_CODE = #{_parameter}
	</select>
</mapper>
