<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.uce.omg.portal.dao.IUserOrgManagerDao">
	
	<delete id="deleteUserOrgManagerByEmpCode" parameterType="java.lang.String">
		DELETE FROM omg_portal_user_org_manager WHERE omg_portal_user_org_manager.EMP_CODE = #{_parameter}
	</delete>
	
	<!-- 查询用户组织 -->
	<select id="findDataManagerByEmpCode" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT ORG_CODE FROM omg_portal_user_org_manager WHERE EMP_CODE = #{_parameter}
	</select>
</mapper>
